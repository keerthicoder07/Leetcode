class Solution(object):
    def getSumAbsoluteDifferences(self, nums):
        """
        :type nums: List[int]
        :rtype: List[int]
        """
        
     
        n = len(nums)
        prefix = [0] * n
        prefix[0] = nums[0]

        # build prefix sums
        for i in range(1, n):
            prefix[i] = prefix[i-1] + nums[i]

        res = [0] * n

        for i in range(n):
            # left side
            if i > 0:
                left_sum = prefix[i-1]          # sum of nums[0..i-1]
                left = nums[i] * i - left_sum
            else:
                left = 0

            # right side
            if i < n - 1:
                right_sum = prefix[n-1] - prefix[i]   # sum of nums[i+1..n-1]
                count_right = n - i - 1
                right = right_sum - nums[i] * count_right
            else:
                right = 0

            res[i] = left + right

        return res

        
