class Solution {
    public String truncateSentence(String s, int k) {
        String [] str=s.split(" ");
        if(k==str.length)
        return s;
        String res="";
        for(int i=0;i<k;i++)
        {
            res=res+str[i];
            if(i!=k-1)
            res=res+" ";
        }
        return res;
        
    }
}
