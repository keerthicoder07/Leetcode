class Solution {
    public int[] decrypt(int[] code, int k) {
        int n=code.length;
        int res[]=new int[n];
        if(k==0)
        {
            return res;
        }
        else if(k>0)
        {
            for(int i=0;i<n;i++)
            {
                int sum=0;
                for(int j=1;j<=k;j++)
                {
                    sum+=code[(j+i)%n];
                }
                res[i]=sum;
            }
        }
        else
        {
            for(int l=0;l<n;l++)
            {
                int sum=0;
                for(int m=-1;m>=k;m--)
                {
                    sum+=code[((l+n)+m)%n];
                }
                res[l]=sum;
            }
        }
        
        return res;
     
        
    }
}
