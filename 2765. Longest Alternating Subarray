class Solution(object):
    def alternatingSubarray(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        n=len(nums)
        if(len(nums)==1):
            return -1
        m=0
        for i in range(n-1):
            c=0
            if(nums[i+1]-nums[i]==1):
                c+=2
                f=1
                for j in range(i+1,n-1):
                    d=nums[j+1]-nums[j]
                    if(d!=f and (d==1 or d==-1)):
                        f=-(f)
                        c+=1
                    else:
                        break
            if(c>m):
                m=c
            if(n-(i+1)<m):
                break
        if(m==0):
            return -1
        return m

                    
        
