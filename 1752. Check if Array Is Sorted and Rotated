class Solution(object):
    def check(self, nums):
        """
        :type nums: List[int]
        :rtype: bool
        """
        res=sorted(nums)
        n=len(nums)
        nums1=copy.copy(nums)
        if(nums==res):
            return True
        def reverse(self,l,r):
            while(l<r):
                nums[l],nums[r]=nums[r],nums[l]
                l+=1
                r-=1
        for k in range(n):
            k%=n
            nums=copy.copy(nums1)
            reverse(self,0,n-1)
            reverse(self,0,k-1)
            reverse(self,k,n-1)
            if(nums==res):
                return True
        return False


        
