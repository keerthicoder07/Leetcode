class Solution {
    public int singleNumber(int[] nums) {
        int c=0;
        Arrays.sort(nums);
        int ca=nums[0];
        int j=0;
        int i=0;
        for(i=0;i<nums.length;i++)
        {
             if(ca==nums[i])
             {
                c++;
             } 
             j++;
             if(j%3==0)
             {
                if(c==3 && i!=nums.length)
                {
                ca=nums[i+1];
                c=0;
                }
                else
                {
                    break;
                }

             }
            
        }
        return ca;
    }
}
